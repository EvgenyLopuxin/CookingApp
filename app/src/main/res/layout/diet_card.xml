<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_15sdp"

    app:cardCornerRadius="@dimen/_10sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_diet_card"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/_20sdp"
            app:shapeAppearanceOverlay="@style/CircleImageView"/>

        <TextView
            android:id="@+id/text_diet_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название диеты"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_diet_card"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/_22sdp"
            android:layout_marginBottom="@dimen/_25sdp"/>

        <TextView
            android:id="@+id/name_diet_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя автора"
            app:layout_constraintStart_toStartOf="@+id/text_diet_card"
            app:layout_constraintTop_toBottomOf="@+id/text_diet_card" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>